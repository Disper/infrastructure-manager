{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays"
  ],
  "gomod": {
    "postUpdateOptions": [
      "gomodTidy"
    ],
    "enabled": true
  },
  "labels": [
    "area/dependency",
    "kind/chore"
  ],
  "branchPrefix": "renovate/",
  "github-actions": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "golang"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
